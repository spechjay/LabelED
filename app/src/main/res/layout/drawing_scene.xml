<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DrawingScene">
    <com.totalboron.jay.labeled.DrawingView android:id="@+id/drawing_view"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"/>

    <com.totalboron.jay.labeled.LinearLayoutCustom android:id="@+id/toolsToShow"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="@dimen/iconHeight"
                                                   android:layout_alignParentBottom="true"
                                                   android:background="@drawable/toolsback"
                                                   android:gravity="center_horizontal">
        <ImageView android:id="@+id/save_button"
                   android:layout_width="@dimen/imageIconSize"
                   android:layout_height="@dimen/imageIconSize"
                   android:layout_gravity="center_horizontal|bottom"
                   android:layout_marginBottom="@dimen/icon_margin"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:onClick="saveImage"
                   android:src="@drawable/ic_save_white_48px"/>
        <ImageView android:layout_width="@dimen/imageIconSize"
                   android:layout_height="@dimen/imageIconSize"
                   android:layout_gravity="center_horizontal|bottom"
                   android:layout_marginBottom="@dimen/icon_margin"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:onClick="toggleColor"

                   android:src="@drawable/ic_brush_white_48px"/>
        <ImageView android:layout_width="@dimen/imageIconSize"
                   android:layout_height="@dimen/imageIconSize"
                   android:layout_gravity="center_horizontal|bottom"
                   android:layout_marginBottom="@dimen/icon_margin"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:onClick="undoLast"
                   android:src="@drawable/ic_restore_page_white_48px"/>
        <ImageView android:layout_width="@dimen/imageIconSize"
                   android:layout_height="@dimen/imageIconSize"
                   android:layout_gravity="center_horizontal|bottom"
                   android:layout_marginBottom="@dimen/icon_margin"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:onClick="clearLabel"
                   android:src="@drawable/ic_delete_forever_white_48px"/>
    </com.totalboron.jay.labeled.LinearLayoutCustom>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/paintToolbar"
                  android:layout_marginBottom="@dimen/seekBarMarginBottom"
                  android:layout_above="@id/toolsToShow"
                  android:visibility="invisible">
        <LinearLayout android:id="@+id/colorsBar"
                      android:layout_width="match_parent"
                      android:layout_height="20dp"
                      android:gravity="center_horizontal"
                      >
            <Button android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginLeft="@dimen/spacingBetweenButtons"
                    android:layout_marginRight="@dimen/spacingBetweenButtons"
                    android:background="@drawable/blackbutton"
                    android:onClick="blackButton"
                    android:text=""/>
            <Button android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginLeft="@dimen/spacingBetweenButtons"
                    android:layout_marginRight="@dimen/spacingBetweenButtons"
                    android:background="@drawable/redbutton"
                    android:onClick="redButton"
                    android:text=""/>
            <Button android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginLeft="@dimen/spacingBetweenButtons"
                    android:layout_marginRight="@dimen/spacingBetweenButtons"
                    android:background="@drawable/greenbutton"
                    android:onClick="greenButton"
                    android:text=""/>
            <Button android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginLeft="@dimen/spacingBetweenButtons"
                    android:layout_marginRight="@dimen/spacingBetweenButtons"
                    android:background="@drawable/bluebutton"
                    android:onClick="blueButton"
                    android:text=""/>
            <Button android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginLeft="@dimen/spacingBetweenButtons"
                    android:layout_marginRight="@dimen/spacingBetweenButtons"
                    android:background="@drawable/whitebutton"
                    android:onClick="whiteButton"
                    android:text=""/>
        </LinearLayout>
        <SeekBar android:id="@+id/seekBar"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:progress="50"/>
    </LinearLayout>
    <com.totalboron.jay.labeled.LinearLayoutCustom android:id="@+id/edit_text_tray"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginEnd="@dimen/margin_of_edit_text"
                                                   android:layout_marginLeft="@dimen/margin_of_edit_text"
                                                   android:layout_marginRight="@dimen/margin_of_edit_text"
                                                   android:layout_marginStart="@dimen/margin_of_edit_text"
                                                   android:layout_marginTop="20dp"
                                                   android:background="@drawable/edit_text_view"
                                                   android:orientation="horizontal"
                                                   android:visibility="invisible">

        <EditText android:id="@+id/edit_text" android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="4dp"
                  android:layout_marginStart="4dp"
                  android:layout_weight="1"/>

        <Button android:id="@+id/button_for_edit_text" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="messageReceiver"
                android:text="Done"/>

    </com.totalboron.jay.labeled.LinearLayoutCustom>

</RelativeLayout>
